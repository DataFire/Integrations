            "in": "query",
            "name": "page",
            "required": false,
            "type": "number",
            "x-example": 10
          },
          {
            "description": "Filter by first name",
            "in": "query",
            "name": "first_name",
            "required": false,
            "type": "string",
            "x-example": "John"
          },
          {
            "description": "Filter by last name",
            "in": "query",
            "name": "last_name",
            "required": false,
            "type": "string",
            "x-example": "Smith"
          },
          {
            "description": "Filter by login name",
            "in": "query",
            "name": "login_name",
            "required": false,
            "type": "string",
            "x-example": "jsmith"
          },
          {
            "description": "Filter by email address",
            "in": "query",
            "name": "email",
            "required": false,
            "type": "string",
            "x-example": "john.smith@example.com"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/UsersHalResponse"
            }
          },
          "400": {
            "description": "Invalid parameters given",
            "schema": {
              "$ref": "#/definitions/ValidationErrorsResponse"
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "operationId": "UserCtrl.getUsers",
        "summary": "Get account users data by account ID"
      }
    },
    "/api/accounts/{account_id}/users/{user_id}": {
      "get": {
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "description": "The Vonage Business Cloud account ID",
            "in": "path",
            "name": "account_id",
            "required": true,
            "type": "string",
